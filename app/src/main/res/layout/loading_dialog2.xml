<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/loading_dialog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:paddingBottom="5.0dp" >

        <ImageView
            android:id="@+id/loading_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/default_pic0" />

        <RelativeLayout
            android:id="@+id/include_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loading_title"
            android:layout_centerHorizontal="true"
            android:gravity="center" >

            <ImageView
                android:id="@+id/gifview2"
                android:layout_width="19.0dp"
                android:layout_height="19.0dp"
                android:layout_centerVertical="true"
                android:background="@drawable/loading_dialog_center"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dp"
                android:layout_toRightOf="@id/gifview2"
                android:text="@string/loading"
                android:textColor="@android:color/black"
                android:textSize="14.0dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>