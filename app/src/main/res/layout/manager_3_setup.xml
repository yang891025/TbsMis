<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/line_layut_white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/skydrive_2_manager"
        style="@style/tool_relativelayout"
        android:layout_width="match_parent"
        android:background="@drawable/set_page_bg" >

        <ImageView
            android:id="@+id/skydrive_2_manager_imageview"
            style="@style/tool_imageview_basic"
            android:layout_marginLeft="10dp"
            android:src="@drawable/sky_manage" />

        <TextView
            style="@style/setting_textview"
            android:layout_toRightOf="@id/skydrive_2_manager_imageview"
            android:text="@string/skydrive_manager" />

        <ImageView
            style="@style/tool_imageview_basic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/xsj" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/backup_manager"
        style="@style/tool_relativelayout"
        android:layout_width="match_parent"
        android:background="@drawable/set_page_bg">

        <ImageView
            android:id="@+id/backup_manager_imageview"
            style="@style/tool_imageview_basic"
            android:layout_marginLeft="10dp"
            android:src="@drawable/app_backup"/>

        <TextView
            style="@style/setting_textview"
            android:layout_toRightOf="@id/backup_manager_imageview"
            android:text="@string/backup_share"/>

        <ImageView
            style="@style/tool_imageview_basic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/xsj"/>
    </RelativeLayout>
</LinearLayout>