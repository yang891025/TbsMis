<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffe6e6e6"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/backup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="15.0dip" />

    <TextView
        android:id="@+id/backup_svrPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="15.0dip" />

    <TextView
        android:id="@+id/backup_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="15.0dip" />

    <TextView
        android:id="@+id/backup_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="15.0dip" />

    <TextView
        android:id="@+id/backup_show_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip"
        android:gravity="top"
        android:paddingLeft="5.0dp"
        android:textSize="15.0dip" />

    <RelativeLayout
        android:id="@+id/backup_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="5.0dip"
            android:singleLine="true"
            android:text="相关操作"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="11.0sp" />

        <ImageView
            android:id="@+id/backup_tool_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/backup_tool_Layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:background="#ffe6e6e6"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/update_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/backup_edit"
                android:layout_width="40.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/app_btn_selector"
                android:gravity="center"
                android:minHeight="30.0dip"
                android:text="修改"
                android:textColor="@color/black"
                android:textSize="12.0dip" />

            <Button
                android:id="@+id/backup_path"
                android:layout_width="40.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/app_btn_selector"
                android:minHeight="30.0dip"
                android:text="选择目录"
                android:textColor="@color/black"
                android:textSize="12.0dip" />

            <Button
                android:id="@+id/server_path"
                android:layout_width="40.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/app_btn_selector"
                android:minHeight="30.0dip"
                android:text="公共目录"
                android:textColor="@color/black"
                android:textSize="12.0dip" />

            <Button
                android:id="@+id/backup_delete"
                android:layout_width="40.0dip"
                android:layout_height="30.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/app_btn_selector"
                android:minHeight="30.0dip"
                android:text="@string/delete"
                android:textColor="@color/black"
                android:textSize="12.0dip" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/start_backup"
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/sapi_btn_selector"
        android:clickable="true" >

        <TextView
            android:id="@+id/account_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:focusable="false"
            android:text="开始备份"
            android:textColor="@color/shadowcolor"
            android:textSize="16.0sp" />
    </RelativeLayout>

</LinearLayout>