<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/line_layut_white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/subscribe_manager"
        android:layout_width="match_parent"
        android:layout_height="40.0dp"
        android:background="@drawable/set_page_bg">

        <ImageView
            android:id="@+id/subscribe_manager_imageview"
            style="@style/tool_imageview_basic"
            android:layout_marginLeft="10dp"
            android:src="@drawable/subscribe_manage"/>

        <TextView
            style="@style/setting_textview"
            android:layout_toRightOf="@id/subscribe_manager_imageview"
            android:text="@string/subscribe_manager" />

        <ImageView
            style="@style/tool_imageview_basic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/xsj"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/collect_manager"
        android:layout_width="match_parent"
        android:layout_height="40.0dp"
        android:background="@drawable/set_page_bg">

        <ImageView
            android:id="@+id/collect_manager_imageview"
            style="@style/tool_imageview_basic"
            android:layout_marginLeft="10dp"
            android:src="@drawable/collect_manage"/>

        <TextView
            style="@style/setting_textview"
            android:layout_toRightOf="@id/collect_manager_imageview"
            android:text="收藏管理" />

        <ImageView
            style="@style/tool_imageview_basic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/xsj"/>
    </RelativeLayout>
</LinearLayout>