<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip" >

        <Button
            android:id="@+id/btnDelTimer"
            android:layout_width="50.0dip"
            android:layout_height="33.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/share_unbind_btn_selector"
            android:clickable="false"
            android:duplicateParentState="false"
            android:focusable="false"
            android:text="@string/delete"
            android:textColor="@color/offline_item_label_color"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/txtTimerTime"
            android:layout_width="wrap_content"
            android:layout_height="44.0dip"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/btnDelTimer"
            android:gravity="center_vertical"
            android:textColor="@color/offline_item_label_color"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/list_divider" />

</LinearLayout>