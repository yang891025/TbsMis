<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@id/include_top"
        layout="@layout/setting_titlebar_advance" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10.0dp"
            android:paddingLeft="5.0dp"
            android:paddingRight="5.0dp"
            android:paddingTop="10.0dp" >

            <LinearLayout
                android:id="@+id/device_set"
                android:layout_width="match_parent"
                android:layout_height="44.0dip"
                android:background="@color/offline_line_color" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1.0dip"
                    android:background="@color/list_bg_color"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip" >

                    <TextView
                        android:id="@+id/txtdevice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="设备信息"
                        android:textColor="@color/offline_item_label_color"
                        android:textSize="16.0sp" />

                    <CheckBox
                        android:id="@+id/device_set_checkbox"
                        android:layout_width="28.0dip"
                        android:layout_height="28.0dip"
                        android:layout_alignBaseline="@+id/txtdevice"
                        android:layout_alignBottom="@+id/txtdevice"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/checkbox_style_shadow"
                        android:clickable="false" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_set_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/review_bg_top"
                android:orientation="vertical"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/device_set_gps"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/more_up" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="访问位置信息"
                        android:textColor="@color/offline_item_label_color"
                        android:textSize="16.0sp" />

                    <CheckBox
                        android:id="@+id/gps_CheckBox"
                        android:layout_width="28.0dip"
                        android:layout_height="28.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:button="@drawable/checkbox_selector" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/more_middle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/device_md5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="根据设备信息生成的md5字符串"
                        android:textColor="#ffa7a7a7"
                        android:textSize="13.0dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="设备标识："
                        android:textColor="#ff555858"
                        android:textSize="18.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/more_middle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/device_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="WIFI名称"
                        android:textColor="#ffa7a7a7"
                        android:textSize="13.0dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="WIFI名称："
                        android:textColor="#ff555858"
                        android:textSize="18.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/more_middle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/device_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="WLAN IP"
                        android:textColor="#ffa7a7a7"
                        android:textSize="13.0dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="WLAN IP："
                        android:textColor="#ff555858"
                        android:textSize="18.0dip" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ftp_set"
                android:layout_width="match_parent"
                android:layout_height="44.0dip"
                android:layout_marginTop="14.0dip"
                android:background="@color/offline_line_color" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1.0dip"
                    android:background="@color/list_bg_color"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/tab_remote"
                        android:textColor="@color/offline_item_label_color"
                        android:textSize="16.0sp" />

                    <ImageView
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44.0dip"
                android:layout_marginTop="14.0dip"
                android:background="@color/offline_line_color" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1.0dip"
                    android:background="@color/list_bg_color"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="我的设备"
                        android:textColor="@color/offline_item_label_color"
                        android:textSize="16.0sp" />

                    <ImageButton
                        android:id="@+id/search_button"
                        android:layout_width="44.0dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:gravity="center"
                        android:src="@drawable/top_bar_search_btn_selector" />

                    <ImageButton
                        android:id="@+id/add_button"
                        android:layout_width="44.0dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/search_button"
                        android:background="@null"
                        android:src="@drawable/wheel_val" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/review_bg_top"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/offline_line_color" >

                    <ListView
                        android:id="@+id/DevicelistTopicItems"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1.0dip"
                        android:background="@color/list_bg_color"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@null"
                        android:dividerHeight="0.0px"
                        android:drawSelectorOnTop="false"
                        android:fadeScrollbars="true"
                        android:fadingEdge="none"
                        android:headerDividersEnabled="true"
                        android:listSelector="@null" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>