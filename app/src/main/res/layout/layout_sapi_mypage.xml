<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/sapi_background_color">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/setting_titlebar_advance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/user_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_title"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="18.0dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_all"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sapi_account_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/imageView1"
                        android:layout_toRightOf="@+id/avatar_iv">

                        <TextView
                            android:id="@+id/nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="昵称"
                            android:textColor="#ff424242"
                            android:textSize="14.0sp"/>

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/nickname"
                            android:layout_marginTop="10.0dip"
                            android:text="账户名"
                            android:textColor="@color/title_btn_normal_color"
                            android:textSize="14.0sp"/>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageView1"
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj"/>

                    <ImageView
                        android:id="@+id/avatar_iv"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="8.0dip"
                        android:background="@color/white"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffe5e5e5"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="个性签名"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp"/>

                    <ImageView
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj"/>

                    <TextView
                        android:id="@+id/signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@+id/textView1"
                        android:hint="你还没有个性签名"
                        android:maxLines="3"
                        android:textColor="#ff4b5460"
                        android:textSize="12.0sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_detail"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="18.0dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_all"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sapi_account_pay"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:paddingLeft="16.0dip">

                    <TextView
                        android:id="@+id/sapi_account_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingRight="12.0dip"
                        android:singleLine="true"
                        android:textColor="#ff4b5460"
                        android:textSize="16.0sp"/>

                    <ImageView
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="我的钱包"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sapi_account_subscribe_li"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:paddingLeft="16.0dip">

                    <TextView
                        android:id="@+id/sapi_account_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/signature_txt"
                        android:gravity="right"
                        android:paddingLeft="12.0dip"
                        android:paddingRight="12.0dip"
                        android:singleLine="false"
                        android:textColor="#ff4b5460"
                        android:textSize="16.0sp"/>

                    <ImageView
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj"/>

                    <TextView
                        android:id="@+id/signature_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="我的订阅"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sapi_account_collect"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:paddingLeft="16.0dip"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingRight="12.0dip"
                        android:singleLine="true"
                        android:textColor="#ff4b5460"
                        android:textSize="16.0sp"/>

                    <ImageView
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="我的收藏"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sapi_account_web_li"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:paddingLeft="16.0dip"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/sapi_account_web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/web_txt"
                        android:gravity="right"
                        android:paddingLeft="12.0dip"
                        android:paddingRight="12.0dip"
                        android:singleLine="false"
                        android:textColor="#ff4b5460"
                        android:textSize="16.0sp"/>

                    <ImageView
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj"/>

                    <TextView
                        android:id="@+id/web_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="我的日志"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_pay"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="18.0dip"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_all"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sapi_account_res_li"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:paddingLeft="16.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/res_txt"
                        android:gravity="right"
                        android:paddingLeft="12.0dip"
                        android:paddingRight="12.0dip"
                        android:singleLine="false"
                        android:textColor="#ff4b5460"
                        android:textSize="16.0sp"/>

                    <ImageView
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj"/>

                    <TextView
                        android:id="@+id/res_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="我的资源"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffe5e5e5"/>

                <RelativeLayout
                    android:id="@+id/sapi_account_personal"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:paddingLeft="16.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingRight="12.0dip"
                        android:singleLine="true"
                        android:textColor="#ff4b5460"
                        android:textSize="16.0sp"/>

                    <ImageView
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="个人管理"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffe5e5e5"/>

                <RelativeLayout
                    android:id="@+id/sapi_account_system"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:paddingLeft="16.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingRight="12.0dip"
                        android:singleLine="true"
                        android:textColor="#ff4b5460"
                        android:textSize="16.0sp"/>

                    <ImageView
                        style="@style/tool_imageview_basic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xsj"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="系统管理"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/sapi_logout_btn"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_below="@+id/user_more"
            android:layout_gravity="center"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="30.0dip"
            android:background="#ffb70000"
            android:text="退出当前账号"
            android:textColor="#ffffffff"
            android:textSize="18.0sp"/>
    </RelativeLayout>

</ScrollView>