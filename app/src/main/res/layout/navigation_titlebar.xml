<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leftmenu_title"
    style="@style/title_basic"
    android:layout_alignParentTop="true"
    android:background="@drawable/right_menu_list_mode_selector" >

    <ImageView
        android:id="@+id/refresh_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_btn" />

    <TextView
        android:id="@+id/tool_date_text"
        style="@style/tool_date_text"
        android:gravity="center"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_toRightOf="@+id/menudata"
        android:layout_toLeftOf="@+id/refresh_btn"
        android:layout_toStartOf="@+id/refresh_btn"/>

    <ImageView
        android:id="@+id/menudata"
        style="@style/title_more_btn"
        android:background="@drawable/title_home" />

</RelativeLayout>