<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/line_layut_white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/clearTemp"
        style="@style/tool_relativelayout"
        android:layout_width="match_parent"
        android:background="@drawable/set_page_bg">

        <ImageView
            android:id="@+id/imgclearTemp"
            style="@style/tool_imageview_basic"
            android:layout_marginLeft="10dp"
            android:src="@drawable/settings_double_push_ico"/>

        <TextView
            style="@style/setting_textview"
            android:layout_toRightOf="@id/imgclearTemp"
            android:text="清理缓存"/>

        <TextView
            android:id="@+id/tool_arrows2"
            style="@style/tool_imageview_basic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/update_apk"
        style="@style/tool_relativelayout"
        android:layout_width="match_parent"
        android:background="@drawable/set_page_bg">

        <ImageView
            android:id="@+id/update_apk_imageview"
            style="@style/tool_imageview_basic"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_update_iv"/>

        <TextView
            style="@style/setting_textview"
            android:layout_toRightOf="@id/update_apk_imageview"
            android:text="@string/update"/>

        <ImageView
            style="@style/tool_imageview_basic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/xsj"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedback"
        style="@style/tool_relativelayout"
        android:layout_width="match_parent"
        android:background="@drawable/set_page_bg">

        <ImageView
            android:id="@+id/feedback_imageview"
            style="@style/tool_imageview_basic"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_fankui_iv"/>

        <TextView
            style="@style/setting_textview"
            android:layout_toRightOf="@id/feedback_imageview"
            android:text="@string/feedback"/>

        <ImageView
            style="@style/tool_imageview_basic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/xsj"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about"
        style="@style/tool_relativelayout"
        android:layout_width="match_parent"
        android:background="@drawable/set_page_bg">

        <ImageView
            android:id="@+id/about_imageview"
            style="@style/tool_imageview_basic"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_about_iv"/>

        <TextView
            style="@style/setting_textview"
            android:layout_toRightOf="@id/about_imageview"
            android:text="@string/about"/>

        <ImageView
            style="@style/tool_imageview_basic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/xsj"/>
    </RelativeLayout>

</LinearLayout>