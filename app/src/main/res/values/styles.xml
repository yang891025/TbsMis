<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_tab_bottom">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ff404142</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tabs_btn_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="news_detail_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bottombar_btn_style</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="news_detail_iamge">
        <item name="android:layout_width">30.0dip</item>
        <item name="android:layout_height">30.0dip</item>
        <item name="android:src">@drawable/bottombar_btn_unback</item>
    </style>

    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/loading_dialog_center</item>
        <item name="android:layout_width">27dip</item>
        <item name="android:layout_height">27dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- 意见反馈样式 -->
    <style name="Theme.HalfTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- tittle more_btn -->
    <style name="title_more_btn">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 初始界面 -->
    <!-- tittle search_btn -->
    <style name="title_textview_basic">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 初始界面tittle text_btn -->
    <style name="title_basic">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/title_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45.0dip</item>
    </style>
    <!-- 导航navigation_top_btn -->
    <style name="tool_relative_basic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tool_imageview_basic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="linearlayout_basic_vertical">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tool_relativelayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40.0dp</item>
        <item name="android:background">@drawable/tool_button</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="tool_textview_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dip</item>
    </style>

    <style name="tool_date_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18dip</item>
        <item name="android:text">分类导航</item>
        <item name="android:shadowColor">#ff000000</item>
    </style>
    <!-- 设置 -->
    <style name="setting_root_relativelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="title_setting">
        <item name="android:layout_marginRight">2.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">完成</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="setting_scrollview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingLeft">5.0dp</item>
        <item name="android:paddingRight">5.0dp</item>
        <item name="android:paddingTop">10.0dp</item>
        <item name="android:paddingBottom">10.0dp</item>
    </style>

    <style name="setting_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/more_color</item>
        <item name="android:textSize">14.0sp</item>
    </style>

    <style name="MySeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">10.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal2</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal2</item>
        <item name="android:minHeight">6.0dip</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">0.0px</item>
    </style>

    <style name="MySeekBar02" parent="@android:style/Widget.SeekBar">
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">10.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:minHeight">6.0dip</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">0.0px</item>
    </style>
    <!-- 时间设置 -->
    <style name="OfflineTimerDialog" parent="@android:style/Theme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 文件管理 -->

    <style name="FileViewOperationButtonStytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/operation_button_background</item>
    </style>

    <style name="CategoryButtonStyle">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CategoryButtonIconStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">3px</item>
    </style>

    <style name="CategoryButtonTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">19px</item>
        <item name="android:textColor">#111111</item>
    </style>

    <style name="CategoryButtonCountTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15px</item>
        <item name="android:textColor">#A6A6A6</item>
    </style>

    <style name="InformationTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">12dip</item>
        <item name="android:drawablePadding">5dip</item>
    </style>

    <style name="CategoryLegendStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">5px</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">10dip</item>
        <item name="android:layout_marginLeft">2dip</item>
    </style>

    <style name="CategoryLegendStyleLand">
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">5px</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">10dip</item>
        <item name="android:layout_marginLeft">2dip</item>
    </style>

    <style name="InformationDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance"></style>

    <style name="TextAppearance.ActionButton">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BottomButton">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">#cc000000</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#80ffffff</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:shadowDy">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_bottom</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BottomButton.Left"></style>

    <style name="BottomButton.Right">
        <item name="android:background">@drawable/btn_bottom_last</item>
    </style>

    <style name="BottomButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/bottom_button_bar</item>
    </style>

    <style name="editInputText">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/popupbox_input_bg</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="check_box_style">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@drawable/basic_checkbox_selector</item>
    </style>

    <style name="base_listview_style" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/base_list_scrollbar_handle</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:listSelector">@drawable/base_list_selector</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@drawable/information_bg</item>
        <item name="android:dividerHeight">1.0dip</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton"/>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionBarSize">45.0dip</item>
    </style>

    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#749efa</item>
        <item name="android:backgroundStacked">#5885ed</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MainTheme">
        <!-- Customize your theme here. -->

    </style>
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="playBarBackground">@drawable/play_bar_bg_selector</item>
    </style>

    <!--微信公众号-->
    <style name="smallCustomProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_holo</item>
    </style>
</resources>