<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/nav_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mmtitle_bg_png"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@id/title_btn4"
        style="@style/MMTitleButton"
        android:background="@drawable/mm_title_btn_left"
        android:focusable="true"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/title_phone_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mm_title_btn_phone"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@id/title"
                style="@style/MMTitle"
                android:layout_weight="1.0"
                android:text="@string/app_name" />

            <TextView
                android:id="@id/sub_title"
                style="@style/MMTitle"
                android:layout_weight="1.0"
                android:text="@string/app_name"
                android:textSize="16.0dip"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@id/title_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mm_title_btn_phone"
        android:visibility="gone" />

    <ImageView
        android:id="@id/title_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_mute_notify_pressed"
        android:visibility="gone" />

    <LinearLayout
        style="@style/MMTitleButton"
        android:gravity="center"
        android:visibility="visible" >

        <ProgressBar
            android:id="@id/title_progress"
            style="@style/smallCustomProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageButton
            android:id="@id/title_btn1"
            style="@style/MMTitleButton"
            android:background="@drawable/mm_title_btn_right"
            android:focusable="true"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>